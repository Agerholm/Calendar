<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FDFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yourdomain.calendar.ViewActivityPlanner">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/varighed"
        android:id="@+id/textView12"
        android:textSize="18dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fortryd"
        android:id="@+id/fortryd"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tilføj"
        android:id="@+id/tilføj"
        android:onClick="tilføj"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Min"
        android:id="@+id/button19"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:textSize="25dp"
        android:onClick="ten"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 Min"
        android:id="@+id/button20"
        android:layout_alignTop="@+id/button19"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 Min"
        android:id="@+id/button23"
        android:layout_alignTop="@+id/button20"
        android:layout_alignRight="@+id/tilføj"
        android:layout_alignEnd="@+id/tilføj"
        android:textSize="25dp"
        android:onClick="twenty"/>

</RelativeLayout>
